{% extends 'base.html.twig' %}

{% form_theme form '@OlixBackOffice/Twig/form-theme-horizontal-layout.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}
{% block content_title %}Formulaires{% endblock %}
{% block content_subtitle %}{% endblock %}

{% block javascripts %}
{{ parent()}}
<script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>
{% endblock %}


{% block content %}

    <div class="container-fluid">

        {% include '@OlixBackOffice/Include/flash-messages.html.twig' %}

        {% if result is not null %}
            {{ dump(result) }}
        {% endif %}
        

        <div class="row">
            <div class="col-md-12">

                {{ form_start(form) }}
                <div class="card card-blue">
                    <div class="card-header">
                        <h3 class="card-title">Formulaire de test</h3>
                    </div>
                    <div class="card-body">
                        {{ form_rest(form) }}
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success float-right">Valider</button>
                    </div>
                </div>
                {{ form_end(form) }}

            </div>
        </div>

    </div>


{% endblock %}
